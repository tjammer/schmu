type c = {c& : int}

fun counter():
  let cnt& = 0
  fun ():
    &cnt = cnt + 1
    cnt

let c = counter()
print(fmt(c()))
print(fmt(c()))
print(fmt(c()))
print(fmt(c()))

fun counter():
  let cnt& = {c = 0}
  fun ():
    &cnt = {c = cnt.c + 1}
    cnt

let c = counter()
print(fmt(c().c))
print(fmt(c().c))
print(fmt(c().c))
print(fmt(c().c))
