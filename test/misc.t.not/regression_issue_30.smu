type v = { x : float, y : float, z : float }

external dot : (v, v) -> float
external norm : v -> v
external scale : (v, float) -> v
external maybe : unit -> bool

fun calc_acc(vel) =
  val vunit =
    if dot(vel, vel) >. 0.1 then
      norm(vel)
    else
      { x = 1.0, y = 0.0, z = 0.0 }

  val acc_force = 100.0

  val acc =
    if maybe() then
      scale(vunit, acc_force)
    elseif maybe() then
      scale(vunit, -acc_force *. 3.0)
    else scale(vunit, 0.1)

  acc
