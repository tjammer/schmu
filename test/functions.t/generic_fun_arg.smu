external printi : int -> unit

type t = { x : int }

-- This function is generic
function apply(x: 'a, f : 'a -> 'b)
  f(x)

a = 2

function add_closed(x)
  -- we close over a
  x + a

-- simple int -> int
function add1(x)
  x + 1

-- simple bool -> bool
function makefalse(b)
  if b then false
  else b

-- simple t -> t
function add3_rec(t)
  { x = t.x + 3 }

printi(apply(20, add1)) >>
printi(apply(20, add_closed)) >>
printi(apply({ x = 20 }, add3_rec).x) >>
if apply(true, makefalse) then printi(1)
else printi(0)
