external printi : int -> unit

-- This function is generic, i.e. only generated once
-- and used for different functions
function apply(x, f)
  f(x)

a = 2

function add_closed(x)
  -- we close over a
  x + a

-- simple int -> int
function add1(x)
  x + 1

-- simple bool -> bool
function makefalse(b)
  if b then false
  else b

